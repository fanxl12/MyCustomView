<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fanxl.mycustomview.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.fanxl.mycustomview.widget.ScrollTagView
            android:id="@+id/main_stag"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp">

        </com.fanxl.mycustomview.widget.ScrollTagView>

        <ImageButton
            android:id="@+id/right_bt_arrow"
            android:layout_width="30dp"
            android:layout_height="44dp"
            android:background="@null"
            android:src="@drawable/jiantou_right"/>

    </LinearLayout>

    <com.fanxl.mycustomview.widget.RightInputText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:inputMarginLeft="4dp"
        app:inputTextSize="14sp"
        app:leftText="房屋编号:"
        app:leftTextSize="14sp"
        app:inputTips="请输入"/>


</LinearLayout>
